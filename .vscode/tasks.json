{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ wu",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-std=c++17",
                "-fansi-escape-codes",
                "-g",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/test/*.cpp",
                "-lgtest",
                "-o",
                "Test"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}